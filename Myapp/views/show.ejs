<%- include ("partials/header") %>

<div class="ui internally celled grid">
  <div class="row">
    <div class="five wide column">
      <img class="ui large rounded fluid image"  src="<%=hostels.image%>">
    </div>
    <div class="seven wide column">
      <h1 class="display-4"><%=hostels.name.toUpperCase()%></h1>
      <p class="lead"><%=hostels.place.toUpperCase()%></p>
      <h3><i size="mid" class="chevron circle right icon"></i> <%=hostels.description%></h3>
    </div>
    <div class="four wide column">
      <p class="lead">HOSTEL</p>
      <div class="list-group">
        <li   class="list-group-item active info">Info 1</li>
        <li  class="list-group-item info">Info 2</li>
        <li  class="list-group-item info">Info 3</li>
        <div class="pull-right">$<%=hostels.price%>/month</div>
      </div>
      <% if(currentuser && hostels.author.id.equals(currentuser._id)){ %>
      <a   class="btn btn-xs btn-warning mt-5" href="/hostels/<%=hostels._id%>/edit">Edit</a>
          <form id="delete" action="/hostels/<%=hostels._id%>?_method=DELETE" method=POST>
          <button  class="btn btn-xs btn-danger mt-5 ml-2">Delete</button>
          </form>
       <%}%>
    </div>
    <div class="well">
      <div class="text-right">
        <p>
          <a id="button" class="btn btn-success" href="/hostels/<%=hostels._id%>/comments/new">Add New Comment</a>
        </p>
      </div>
      <hr>
      <% hostels.comments.forEach(function(comment){%>
        <div class="row">
          <div class="col-md-12">
           <strong> <%= comment.author.username%></strong>
            <p>
              - <%= comment.text%></p>
              <% if(currentuser && comment.author.id.equals(currentuser._id)){ %>
              <a   class="btn btn-xs btn-warning mt-2" href="/hostels/hostels._id/comments/<%=comment._id%>/edit">Edit</a>
              <form id="delete" action="/hostels/<%=hostels._id%>/comments/<%=comment._id%>?_method=DELETE" method=POST>
              <button  class="btn btn-xs btn-danger mt-2 ml-2">Delete</button>
              </form>
              <%}%>
              <div class="ui huge star rating"></div>
          <% })%>
          </div>
        </div>
    </div>
  </div>






<%- include ("partials/footer") %>